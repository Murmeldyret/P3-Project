<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Zenref.Ava.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="Zenref.Ava.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Zenref.Ava">
    
	<Grid RowDefinitions="auto, auto" Margin="20 10">

		<StackPanel Orientation="Horizontal" Grid.Row="0" Spacing="20">
			<Button Content="Database" Command="{Binding UpdateViewCommand}" CommandParameter="Database"/>
			<Button Content="Export" Command="{Binding UpdateViewCommand}" CommandParameter="Export"/>
		</StackPanel>
		
		<ContentControl Grid.Row="1" Content="{Binding SelectedViewModel}"/>

	</Grid>
	
</Window>
