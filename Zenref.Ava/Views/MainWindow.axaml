<Window x:Class="Zenref.Ava.Views.MainWindow"
		x:Name="MainView"
		xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Icon="/Assets/avalonia-logo.ico"
        Title="Zenref.Ava"
		Width="300"
		Height="200">

	<Window.Styles>
		<Style Selector="Button">
			<Setter Property="Height" Value="50" />
			<Setter Property="Width" Value="100"/>
			<Setter Property="Margin" Value="15"/>
		</Style>
	</Window.Styles>

	<StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
		<Button Command="{Binding OpenDatabaseView}" CommandParameter="{Binding ElementName=MainView}"> Kendte kilder</Button>
		<Button Command="{Binding OpenExportView}" CommandParameter="{Binding ElementName=MainView}"> Identificer kilder</Button>
	</StackPanel>
	
</Window>

