<Window x:Class="Zenref.Ava.Views.DatabaseView"
		x:Name="DBView"
		xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="600"
        Title="Database Window">

	<Grid Name="grid" RowDefinitions="Auto">
		<Menu Background="Gray" VerticalAlignment="Top" HorizontalAlignment="Stretch">
			<Button Command="{Binding OpenDragAndDropView}" CommandParameter="{Binding ElementName=DBView}"> Tilføj</Button>
			<TextBox KeyUp="SearchFilter" Watermark="Søg" Width="150" FontSize="15"></TextBox>
		</Menu>
		<DataGrid AutoGenerateColumns="True" Items="{Binding References}" Name="dataGrid" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,40"
				  RowBackground="LightGray" CanUserResizeColumns="True" Height="500">
		</DataGrid>
	</Grid>
</Window>