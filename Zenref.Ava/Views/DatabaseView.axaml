<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Zenref.Ava.Views.DatabaseView">
	
	<Grid Name="grid" RowDefinitions="Auto, Auto">
		<Menu Background="Gray" VerticalAlignment="Top" HorizontalAlignment="Stretch">
			<Button Name="addReferenceButton" Command="{Binding OpenImportView}"> Tilføj</Button>
			<TextBox Name="searchTextBox" Watermark="Søg" Width="150" FontSize="15"></TextBox>
		</Menu>
	</Grid>
</UserControl>
